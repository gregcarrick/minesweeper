<Window x:Class="Minesweeper.GameEndMessageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Minesweeper"
        mc:Ignorable="d" Background="{StaticResource BgBrush}" ResizeMode="NoResize" SizeToContent="WidthAndHeight">
    <DockPanel Margin="0" Width="308" Height="130">
        <TextBlock x:Name="text" Height="60" Margin ="6, 12, 6, 6" VerticalAlignment="Top" DockPanel.Dock="Top"/>
        <local:GameEndWindowButton x:Name="restartButton" Width="145" Height="40" DockPanel.Dock="Left" Margin="6,6,3,6" Text="Play again"/>
        <local:GameEndWindowButton x:Name="quitButton" Width="145" Height="40" DockPanel.Dock="Right" Margin="3,6,6,6" Text="Quit"/>
    </DockPanel>
</Window>
